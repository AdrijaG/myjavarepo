import java.util.Date;

public class Person {
	private int perId;
	private String perName;
	private Date bDate;
	private String mobile;
	
	//Default Constructor
	public Person() {
		perId=0;
		perName=null;
		bDate=null;
		mobile=null;
	}
	
	//parametrised constructor
	public Person(int id,String perName,Date bdate,String mob) {
		this.perId=id;
		this.perName=perName;
		this.bDate=bdate;
		this.mobile=mob;
		
	}
	
	public void display() {
		System.out.println("Id : "+perId);
		System.out.println("Name : "+perName);
		System.out.println("bDate : ");
		System.out.println("Mobile :"+mobile);
		
	}
	
	/*  this is destructor
	 * public void finalize(){
		
	}*/
	
	
	

}
